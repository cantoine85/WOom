<div class="bg bg-sign-up padded text-center white">
  <h2>Se connecter</h2>
  <div class="padded-hor-10">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    label: "Email",
                    required: false,
                    autofocus: true %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false %>
        <%= f.input :remember_me,
                    label: "Se souvenir de moi",
                    as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "ghost-btn ghost-btn-white" %>
      </div>
    <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
