<div class="bg bg-sign-up padded text-center white">
  <h2>Inscription</h2>
  <div class="padded-hor-10">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name,
                    label: "Nom",
                    required: true %>
        <%= f.input :email,
                    label: "Email",
                    required: true,
                    autofocus: true %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: true,
                    placeholder: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation,
                    label: "Confirmer votre mot de passe",
                    required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "S'inscrire", class: "ghost-btn ghost-btn-white" %>
      </div>
    <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

